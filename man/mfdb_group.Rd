\name{mfdb_group}
\alias{mfdb_group}
\alias{mfdb_group_numbered}
\alias{mfdb_bootstrap_group}
\alias{mfdb_interval_group}

\title{MareFrame DB groups}
\description{
    Represent a grouping of data to be applied when summarising area, timestep,
    age or length.
}

\usage{
# Named grouping of discrete items
mfdb_group(...)

# Grouping of discrete items, names generated by prefix
mfdb_group_numbered(prefix, ...)

# make (count) mfdb_groups, by sampling (count) times from (group)
mfdb_bootstrap_group(count, group)

# Grouping of a continuous interval (i.e. length)
mfdb_interval_group(prefix, int_min, int_max, int_step)
}
\arguments{
    \item{...}{
        For \code{mfdb_group}, all named arguments are expected to be a named
        list of members for that group.
        For \code{mfdb_group_numbered}, the members do not have to be named, a
        name will be generated based on the prefix.
    }
    \item{prefix}{
        When generating numeric group names, the character prefix to append to
        the beginning.
    }
    \item{group}{
        For \code{mfdb_bootstrap_group}, the mfdb_group to do sampling with
        replacement from.
    }
    \item{count}{
        For \code{mfdb_bootstrap_group}, How many times to sample each member
        of the given group.
    }
    \item{int_min, int_max}{
        Minimum and maximum for an interval
    }
    \item{int_step}{
        Step between groupings, defaults to 20
    }
}

\examples{
## Aggregate age into 2 groups. "young" (for ages 1--3) and
## "old" (for ages 4--6)
g1 <- mfdb_group(young = c(1,2,3), old = c(4,5,6))
\dontrun{
$young
[1] 1 2 3

$old
[1] 4 5 6

attr(,"class")
[1] "mfdb_group"
}

## Aggregate areas into "area1" and "area2".
g2 <- mfdb_group_numbered("area", c(1011,1012,1013), c(1021,1022))
\dontrun{
$area1
[1] 1011 1012 1013

$area2
[1] 1021 1022

attr(,"class")
[1] "mfdb_group"
}

## Take 3 samples with replacement from each group in area
g3 <- mfdb_bootstrap_group(3, g2)
\dontrun{
[[1]]
[[1]]$area1
[1] 1011 1013 1012

[[1]]$area2
[1] 1021 1021


[[2]]
[[2]]$area1
[1] 1011 1013 1012

[[2]]$area2
[1] 1021 1021


[[3]]
[[3]]$area1
[1] 1012 1013 1013

[[3]]$area2
[1] 1022 1022


attr(,"class")
[1] "mfdb_bootstrap_group"
}}
